{
  "compilerOptions": {
    "outDir": "dist", // where to put the compiled JS files
    "target": "es5", // which level of JS support to target
    "module": "ES2020", // which system for the program AMD, UMD, System, CommonJS
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "moduleResolution": "node",
  },
  "exclude": ["node_modules", "./dist"] // which files to not compile
}
